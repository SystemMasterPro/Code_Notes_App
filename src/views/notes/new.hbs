<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header text-center">
            <h5>Nueva Nota</h5>
        </div>
        <div class="card-body">
            <form action="/notes/new" method="POST">
                <div class="form-group">
                    <input type="text" name="title" class="form-control mb-2" placeholder="Ingrese el titulo" autofocus>
                </div>
                <div class="form-group">
                    <textarea name="description" class="form-control mb-2" placeholder="Ingrese la descripcion"></textarea>
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary btn-block"><i class="fas fa-save"></i> Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>
