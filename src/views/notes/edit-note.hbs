<div class="col-md-4 mx-auto">
    <div class="card m-4">
        <div class="card-header text-center">
            <h3>Editar Nota</h3>
        </div>
        <div class="card-body">
            <form action="/notes/edit-note/{{note._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" class="form-control" name="title" placeholder="Titulo" value="{{note.title}}">
                </div>
                <div class="form-group mt-2">
                    <textarea name="description" class="form-control" placeholder="Descripcion">{{note.description}}</textarea>
                </div>
                <div class="form-group mt-2 text-center">
                    <button class="btn btn-primary btn-block">Actualizar</button>
                </div>
            </form>
        </div>
    </div>
</div>