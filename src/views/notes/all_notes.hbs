<div class="row">
    {{#each notes}}
        <div class="col-md-3 mb-2">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between align-items-center">{{title}}<a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a></h4>
                    <p>{{description}}</p>
                    <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <button class="btn btn-danger btn-block" type="submit">Eliminar</button>
                    </form>
                </div>
            </div>
        </div>
    {{else}}
    <div class="card mx-auto">
        <div class="card-header text-center">
            <h3>Hola {{user.name}}</h3>
        </div>
        <div class="card-body text-center">
            <p class="lead">CREA TU PRIMERA NOTA</p>
            {{!-- <a href="/notes/add" class="btn btn-success btn-block">Crea Tu Primera Nota</a> --}}
        </div>
        <div class="card-footer text-center">
            <a href="/notes/add" class="btn btn-success btn-block">Crear Nueva Nota</a>
        </div>
    </div>
    {{/each}}
</div>